<style>

</style>


<div class="container mx-auto">
    <div>
        <img src="/img/RT-Construct-Logo.png" class=" mx-auto m-4 logo1 " alt="RT Construct">
        <h3> RT System - Listado de Usuarios</h3>
        <a type="button" class="btn btn-primary p-8 r-25 " href="/users/signup"> Agregar Usuario Nuevo </a>
    </div>
    <div class="col-md-6">
        <table class="table table-striped table-hover  ">
            <thead class=" thead-dark " style=" font-size:14px; ">

                <tr>
                    <th>
                        Fecha Ingreso
                    </th>
                    <th>
                        Usuario
                    </th>

                    <th>
                        Nombre
                    </th>
                    <th>
                        Apellido
                    </th>
                    <th> Numero Identificacion</th>
                    <th>
                        Administrador
                    </th>
                    <th>
                        Usuario Responsable
                    </th>

                </tr>
            </thead>
            <tbody>
                {{#each users}}

                <tr>
                    <td> {{fecha}} </td>
                    <td> {{name}} </td>
                    <td> {{nombre}} </td>
                    <td> {{apellido}} </td>
                    <td> {{dni}} </td>
                    <td> {{admin}} </td>
                    <td> {{usuario}} </td>



                    <td>
                        <div><a href="/users/edit/ {{_id}}" title="Editar"><img src="/img/Edit-icon-32.png"
                                    alt="Editar">
                            </a>

                            <a href="/users/delete/ {{_id}} "> <img type="button" src="/img/trash-32x32.png"
                                    onclick="return ConfirmDelete() " title="Eliminar"></a>






                        </div>
                    </td>
                </tr>
            </tbody>


            {{else}}
            <div class="card mx-auto">
                <div class="card-body">
                    <h1>Hola {{user.name}} </h1>
                    <p class="lead">Aun no hay Usuarios</p>
                    <a href="/users/signup" class="btn btn-success btn-block">Agregar Cliente</a>
                </div>
            </div>
            {{/each}}


        </table>

    </div>


    <script type="text/javascript">
        function ConfirmDelete() {
            var resp = confirm("Estas seguro de querer eliminar este Usuario?");
            if (resp == true) { return true } else { return false }
        };

    </script>